#!/usr/bin/env python

'''
This is just a prototype of what the cli will be.
It can be used to test things in the mean time.
'''

import requests
import json
USAGE = """
usage: ./cli <method> <category> <title> <content>

methods for text based data:
    list
    create
    search
"""
URL = 'http://localhost:3000/note/'

def main(method, **kwargs):
    if method == 'list':
        category = kwargs.get('category')
        path = URL + category
        r = requests.get(path)

        res = json.loads(r.text)
        for item in res:
            print item.get('title')
            print '  - ' + item.get('content')
            print
    if method == 'create':
        category = kwargs.get('category')
        path = URL + category
        r = requests.post(path, data=kwargs)
        print r.status_code
    if method == 'search':
        print "can't search yet"
        pass


if __name__ == '__main__':
    import sys
    if len(sys.argv) < 3:
        sys.exit(USAGE)
    method = sys.argv[1]
    category = sys.argv[2]
    kwargs = { 'category': category }
    if method == 'create':
        kwargs['title'] = sys.argv[3] or ''
        kwargs['content'] = sys.argv[4] or ''

    print "requesting %s on %s%s" % (method, URL, category)
    main(method, **kwargs)
